<?xml version="1.0" encoding="UTF-8"?>
<flow>
    <chain name="orderProcessChain">
        THEN(
            validateOrder,
            WHEN(checkStock, calculatePrice),
            processPayment,
            shipOrder
        )
    </chain>

    <chain name="userActionChain">
        SWITCH(userAction).to(
            loginAction,
            registerAction,
            logoutAction
        )
    </chain>

    <chain name="dataProcessChain">
        FOR(dataList).DO(
            validateData,
            transformData,
            saveData
        )
    </chain>
</flow>